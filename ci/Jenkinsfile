pipeline {
    agent {
        label 'DockerAgents'
    }
    environment {
        SONARQUBETOKEN = credentials('sonar-qube-token')
    }
    options {
        disableConcurrentBuilds()
    }
    stages {
        stage('Run CLI Command') {
            steps {
                script {
                    println "Running build"
                }
            }
        }
        stage('Maven Package') {
            steps {
                mavenPackage()
            }
        }
        stage('Sonar') {
            steps {
                sh "mvn sonar:sonar \
                      -Dsonar.projectKey=com.aeontree.springci \
                      -Dsonar.host.url=http://sonarqube:13004 \
                      -Dsonar.login=$SONARQUBETOKEN"
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}

def mavenPackage() {
    def maven_build="mvn clean package"
    sh(script: maven_build)
}