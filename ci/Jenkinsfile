pipeline {
    agent {
        docker {
            image 'dockeragentmvn:latest'
            args '-v maven_repository:/root/.m2'
        }
    }
    options {
        disableConcurrentBuilds()
    }
    stages {
        stage('Run CLI Command') {
            steps {
                script {
                    println "Running build"
                }
            }
        }
        stage('Maven Package') {
            steps {
                mavenPackage()
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}

def mavenPackage() {
    def maven_build="mvn clean package"
    sh(script: maven_build)
}